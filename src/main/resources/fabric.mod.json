{
  "schemaVersion": 1,
  "id": "vanilla-server-utilities",
  "version": "${version}",

  "name": "Vanilla Server Utilities",
  "description": "A mods that provides server useful utilities, such as /backup command and periodic auto-save with customizable options, while keeping your server \"vanilla\"",
  "authors": [
    "iLittleWizard"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/ilittlewizard/vanilla-server-utilities"
  },

  "license": "CC0-1.0",
  "icon": "assets/vanilla-server-utilities/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.github.ilittlewizard.vsu.VsuMod"
    ]
  },
  "mixins": [
    "vanilla-server-utilities.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": "~1.19",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
